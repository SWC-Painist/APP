<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/progress" android:gravity="left">
        <shape>
            <size android:width="135dp"
                android:height="2dp"/>
            <solid android:color="@color/black"/>
            <gradient
                android:angle="0"
                android:startColor="#303030"
                android:centerColor="#000000"
                android:endColor="#0F0F0F"
                android:type="linear" />
        </shape>
    </item>
    <item android:id="@android:id/progress" android:gravity="top">
        <shape>
            <size android:height="5dp"/>
            <solid android:color="@color/white"/>
        </shape>
    </item>
    <item android:id="@android:id/progress" android:gravity="bottom">
        <shape>
            <size android:height="5dp"/>
            <solid android:color="@color/white"/>
        </shape>
    </item>
</layer-list>