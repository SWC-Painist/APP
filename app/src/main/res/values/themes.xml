<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Painist" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Painist.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Painist.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Painist.TitleBar" parent="Theme.AppCompat.Light">
        <item name="color">#808080</item>
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorControlActivated">#808080</item>
        <item name="colorControlHighlight">#808080</item>
    </style>

    <style name="Theme.Painist.TabLayout" parent="Theme.AppCompat.Light">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Theme.Painist.NoActionBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="EditText" parent="Theme.Painist">
        <item name="colorControlNormal">#A0A0A0</item>
        <item name="colorControlActivated">#808080</item>
        <item name="colorControlHighlight">#808080</item>
    </style>

    <style name="PracticeModeButton" parent="Theme.AppCompat.Light">
        <item name="color">#FFFFFF</item>
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorControlNormal">#FFFFFF</item>
    </style>

    <style name="Theme.Painist.NoActionBar.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Painist.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>