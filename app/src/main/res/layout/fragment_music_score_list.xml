<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/music_score_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/music_score_1"
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:layout_margin="7dp"
            android:padding="10dp"
            android:background="@drawable/rounded_retangle"
            android:orientation="horizontal"
            android:gravity="start">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="#1070D0"
                    android:layout_gravity="center">
                </ImageView>
                <!--                <ImageView-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:background="@drawable/ic_menu_camera">-->

                <!--                </ImageView>-->

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="0dp">
                    <LinearLayout
                        android:layout_width="10dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"
                        android:background="#1070D0">
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="10dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"
                        android:background="#1070D0">
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"

                        android:text="A Comme Amoure"
                        android:textSize="18dp">

                    </TextView>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="ASDFASDFASDFASDFASDFA
                    SDFAASDFASDFASDFASDASDFASDFASDFASDF
                    ASDFASDFASDFASDFASDFASDFF">

                </TextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/music_score_2"
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:layout_margin="7dp"
            android:padding="10dp"
            android:background="@drawable/rounded_retangle"
            android:orientation="horizontal"
            android:gravity="start">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="@color/design_default_color_error"
                    android:layout_gravity="center">
                </ImageView>
                <!--                <ImageView-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:background="@drawable/ic_menu_camera">-->

                <!--                </ImageView>-->

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="0dp">
                    <LinearLayout
                        android:layout_width="10dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"
                        android:background="@color/design_default_color_error">
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="10dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"
                        android:background="@color/design_default_color_error">
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:text="Merry Christmas"
                        android:textSize="18dp">

                    </TextView>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="ASDFASDFASDFASDFASDFA
                    SDFAASDFASDFASDFASDASDFASDFASDFASDF
                    ASDFASDFASDFASDFASDFASDFF">

                </TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>