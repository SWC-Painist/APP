<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scoreitem_frame"
    android:layout_width="fill_parent"
    android:layout_height="100dp"
    android:background="@drawable/ripple_score_item"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:orientation="horizontal"
    android:gravity="start">

    <LinearLayout
        android:id="@+id/scoreitem_subframe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">
            <ImageView
                android:id="@+id/scoreitem_avatar"
                android:layout_width="140dp"
                android:layout_height="90dp"
                android:background="#E0E0E0"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp">
                <LinearLayout
                    android:layout_width="5dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="#606060"/>
                <LinearLayout
                    android:layout_width="5dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="#606060"/>
                <LinearLayout
                    android:layout_width="5dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="#606060"/>
                <TextView
                    android:id="@+id/scoreitem_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="秋日私语"
                    android:textSize="20sp"
                    android:textColor="#606060"
                    android:textStyle="bold"
                    android:singleLine="true">

                </TextView>
            </LinearLayout>
            <TextView
                android:id="@+id/scoreitem_intro_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="5dp"
                android:text=" - 距上一次练习已有3天"
                android:textSize="15sp"
                android:singleLine="true">
            </TextView>
            <TextView
                android:id="@+id/scoreitem_intro_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="5dp"
                android:text=" - 熟练度只有65% 加油~"
                android:textSize="15sp"
                android:singleLine="true">
            </TextView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>