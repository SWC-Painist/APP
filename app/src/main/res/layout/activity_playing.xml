<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/playing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoadingActivity">

    <LinearLayout
        android:id="@+id/playing_score_container"
        android:layout_width="10000dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/playing_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="2.2"
            android:scaleY="2.2"
            android:contentDescription="Playing Score" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/loading_settings_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/practice_mode_button"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="预习模式"
            android:textSize="20sp"
            android:background="@drawable/rounded_retangle_border"
            app:backgroundTint="#F0F0F0"
            android:textColor="#606060"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/practice_hint_card"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/practice_hint_card_right"
            android:layout_width="170dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_card"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="7dp"
            android:layout_marginRight="7dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
            <TextView
                android:id="@+id/practice_hint_card_right_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="右手弹奏"
                android:textSize="22sp"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/vertical_line_dark"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/practice_hint_card_left"
            android:layout_width="170dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_card"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="7dp"
            android:layout_marginRight="7dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/practice_hint_card_left_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="左手弹奏"
                    android:textSize="22sp"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/vertical_line_dark"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/playing_count_down_background"
        android:layout_centerInParent="true"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/count_down_animation_total"/>

    <FrameLayout
        android:id="@+id/playing_count_down_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <TextView
            android:id="@+id/playing_count_down"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="170sp"
            android:textColor="#505050"
            android:fontFamily="@font/cuyuan" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/playing_recording_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/fragment_playing_recording_frame"/>
    </FrameLayout>

</RelativeLayout>