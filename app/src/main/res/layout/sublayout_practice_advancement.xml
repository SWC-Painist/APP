<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sublayout_practice_advancement_back">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingTop="200dp"
        android:paddingLeft="7dp"
        android:orientation="vertical"
        style="@style/StatisticPracticeTime">
        <LinearLayout
            android:id="@+id/_text_group_1"
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:padding="5sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="left"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/_label_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="经过练习"
                android:textSize="22sp"
                android:fontFamily="@font/zongyi"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/_text_group_2"
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:padding="5sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="left"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/_label_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="你的水平有了大幅提升"
                android:textSize="22sp"
                android:fontFamily="@font/zongyi"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/_text_group_3"
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:padding="5sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="left"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/_label_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="熟练程度平均进步了"
                android:textSize="22sp"
                android:fontFamily="@font/zongyi"/>

            <TextView
                android:id="@+id/sublayout_practice_advancement_fluency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="12%"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:textSize="30sp"
                android:fontFamily="@font/artifakt"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/_text_group_4"
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:padding="5sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="left"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/_label_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="从你的第一首曲子"
                android:textSize="22sp"
                android:fontFamily="@font/zongyi"/>

            <TextView
                android:id="@+id/sublayout_practice_advancement_first_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="《小星星》"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:textSize="25sp"
                android:fontFamily="@font/zongyi"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/_text_group_5"
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:padding="5sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="left"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/_label_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="到最近练习的"
                android:textSize="22sp"
                android:fontFamily="@font/zongyi"/>
            <TextView
                android:id="@+id/sublayout_practice_advancement_last_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="《练习曲集II》"
                android:paddingLeft="5sp"
                android:paddingRight="5sp"
                android:textSize="25sp"
                android:fontFamily="@font/zongyi"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/_text_group_6"
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:padding="5sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="left"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/_label_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="难度提升了"
                android:textSize="22sp"
                android:fontFamily="@font/zongyi"/>

            <TextView
                android:id="@+id/sublayout_practice_advancement_level_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="420%"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:textSize="30sp"
                android:fontFamily="@font/artifakt"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>