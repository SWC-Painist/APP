<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sublayout_last_month_back">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingTop="80dp"
        android:paddingRight="5dp"
        android:orientation="vertical"
        style="@style/StatisticPracticeTime">
        <LinearLayout
            android:id="@+id/_text_group_1"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:padding="5sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/_label_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="你最拿手的曲子是"
                android:textSize="18sp"
                android:fontFamily="@font/zongyi"/>
            <TextView
                android:id="@+id/sublayout_practice_score_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="《梦中的婚礼》"
                android:textSize="22sp"
                android:fontFamily="@font/zongyi"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/_text_group_2"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:padding="5sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/_label_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="熟练度高达"
                android:textSize="22sp"
                android:fontFamily="@font/zongyi"/>

            <TextView
                android:id="@+id/sublayout_practice_score_favorite_fluency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="97%"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:textSize="27sp"
                android:fontFamily="@font/artifakt"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/_text_group_3"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:padding="5sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/_label_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="你练习过最难的曲子是"
                android:textSize="18sp"
                android:fontFamily="@font/zongyi"/>
            <TextView
                android:id="@+id/sublayout_practice_score_hardest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="《幻想即兴曲》"
                android:textSize="22sp"
                android:fontFamily="@font/zongyi"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/_text_group_4"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:padding="5sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/_label_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="这首曲子你反反复复练了"
                android:textSize="22sp"
                android:fontFamily="@font/zongyi"/>
            <TextView
                android:id="@+id/sublayout_practice_score_hardest_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="20"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:textSize="27sp"
                android:fontFamily="@font/artifakt"/>
            <TextView
                android:id="@+id/_label_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="遍"
                android:textSize="22sp"
                android:fontFamily="@font/zongyi"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/_text_group_5"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:padding="5sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/_label_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="你进步最快的曲子是"
                android:textSize="18sp"
                android:fontFamily="@font/zongyi"/>
            <TextView
                android:id="@+id/sublayout_practice_score_advancement_fastest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="《小星星变奏曲》"
                android:textSize="22sp"
                android:fontFamily="@font/zongyi"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/_text_group_6"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:padding="5sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/_label_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="短短几天就有了飞速的提升"
                android:textSize="22sp"
                android:fontFamily="@font/zongyi"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/_text_group_7"
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:padding="5sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/_label_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text=". . . . . ."
                android:textSize="22sp"
                android:fontFamily="@font/zongyi"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/_text_group_8"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:padding="5sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/_label_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="也许在某一天你会忘记"
                android:textSize="22sp"
                android:fontFamily="@font/zongyi"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/_text_group_9"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:padding="5sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/_label_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="但是它们在你指尖划过的时刻"
                android:textSize="22sp"
                android:fontFamily="@font/zongyi"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/_text_group_10"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:padding="5sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/_label_11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="那是你们共同的隽永回忆"
                android:textSize="22sp"
                android:fontFamily="@font/zongyi"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>