<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sublayout_practice_score_back">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:paddingBottom="40dp"
        android:paddingRight="5dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:padding="5sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/_label_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="从你使用 Painist 以来..."
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:padding="5sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/_label_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="你一共练习了"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/sublayout_practice_time_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="233"
                android:paddingLeft="15sp"
                android:paddingRight="15sp"
                android:textSize="35sp"/>

            <TextView
                android:id="@+id/_label_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="小时"
                android:textSize="25sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:padding="5sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/sublayout_practice_time_max_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="2020年4月1日"
                android:textSize="30sp"/>
            <TextView
                android:id="@+id/_label_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="那一天"
                android:paddingLeft="15sp"
                android:textSize="25sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:padding="5sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/_label_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="你不知疲倦地练习了"
                android:textSize="25sp"/>
            <TextView
                android:id="@+id/sublayout_practice_time_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="11.5"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:textSize="35sp"/>
            <TextView
                android:id="@+id/_label_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="小时"
                android:textSize="25sp"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>