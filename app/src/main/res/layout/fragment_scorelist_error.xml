<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scoreitem_error_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.scorelist.ScorelistFragment">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:translationY="-50dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="113.5dp"
            android:layout_height="101dp"
            android:src="@mipmap/warning_icon"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/scoreitem_error_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="无法连接至服务器"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="#A0A0A0"/>
        <TextView
            android:id="@+id/scoreitem_error_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="点击屏幕重试"
            android:textSize="20dp"
            android:textColor="#909090"/>
    </LinearLayout>
</RelativeLayout>